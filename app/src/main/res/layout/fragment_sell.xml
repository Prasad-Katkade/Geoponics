<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="31dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:text="Choose What You want to sell :"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/products_spin"
            android:layout_width="81dp"
            android:layout_height="47dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingLeft="10dp"
        android:text="* Uploading Image is mandatory"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="362dp"
        android:layout_height="345dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_img" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/customedittext"
        android:inputType="textPersonName"
        android:hint="Enter Product Name" />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/customedittext"
        android:hint="Enter Description.."
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/product_price"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/customedittext"
            android:ems="10"
            android:hint="Enter Price"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/product_count"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/customedittext"
            android:ems="10"
            android:hint="Enter Total count.."
            android:inputType="number"
            android:padding="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/sell_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_ripplewhite_rec"
        android:text="Sell !" />

    <ProgressBar
        android:id="@+id/progressUplaodBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:padding="8dp"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>