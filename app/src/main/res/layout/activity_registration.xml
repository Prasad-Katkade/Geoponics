<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registration">

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Geo-Ponics"
        android:textColor="#27ae60"
        android:textSize="46sp"
        android:transitionName="title_anim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:transitionName="logo_anim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        app:srcCompat="@drawable/leaflogo" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Enter Details :"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Enter Name.."
            android:layout_margin="5dp"
            android:background="@drawable/customedittext"
            android:textColor="#2c4c3b"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Email.."
            android:layout_margin="5dp"
            android:background="@drawable/customedittext"
            android:textColor="#2c4c3b"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Password.."
            android:layout_margin="5dp"
            android:background="@drawable/customedittext"
            android:textColor="#2c4c3b"
            android:padding="8dp"
            android:textSize="20sp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/user_phno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Phone no.."
            android:layout_margin="5dp"
            android:background="@drawable/customedittext"
            android:textColor="#2c4c3b"
            android:inputType="phone"
            android:padding="8dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/user_address"
            android:layout_width="313dp"
            android:layout_height="96dp"
            android:layout_margin="5dp"
            android:background="@drawable/customedittext"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter Address.."
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="#2c4c3b"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="#000000"
            android:text="Are You Farmer ?"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#27ae60"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/farmer_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Yes"
                android:textColor="#2c4c3b"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/farmer_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="No"
                android:textColor="#2c4c3b"
                android:textSize="15sp" />
        </RadioGroup>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_ripplewhite_rec"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Register" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>